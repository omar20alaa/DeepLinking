<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_recieved_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/deep_linking"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:importantForAccessibility="no"
        android:src="@drawable/deep_linking"
        app:layout_constraintTop_toBottomOf="@+id/tv_recieved_text"
        app:layout_constraintBottom_toTopOf="@+id/sendToAppBButton"
        app:layout_constraintStart_toStartOf="@+id/tv_recieved_text"
        app:layout_constraintEnd_toEndOf="@+id/tv_recieved_text"
        />


    <Button
        android:id="@+id/sendToAppBButton"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@null"
        android:backgroundTint="@color/purble"
        android:text="@string/send_message"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recieved_text" />


</androidx.constraintlayout.widget.ConstraintLayout>